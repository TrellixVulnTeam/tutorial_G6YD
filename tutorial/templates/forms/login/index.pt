<!DOCTYPE html>
<html >
  <head>
    <meta charset="UTF-8">
    <title>ورود به سایت توریستی</title>
        <link rel="stylesheet" href="${request.static_url('tutorial:templates/forms/login/css/style.css') }">
  </head>
  <body>
    <div class="login-page">
        <div class="form">
            <form method="post">
                <input type="hidden" name="came_from">
                <label for="login">نام کاربری</label>
                <input type="text" id="login"
                       name="login"
                       value="${login}"/><br/>
                <label for="password">رمز عبور</label>
                <input type="password" id="password"
                       name="password"
                       value="${password}"/><br/>
                <button type="submit" name="form.submitted" >
login
                </button>
            </form>
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="${request.static_url('tutorial:templates/forms/login/js/index.js') }"></script>
  </body>
</html>
